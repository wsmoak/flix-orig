<h1><%= pluralize(@movies.size, 'Movie') %></h1>

<% @movies.each do |movie| %>
  <article>
    <header>
      <h2><%= link_to(movie.title, movie) %></h2>
      <!-- same as: <h2><%= link_to(movie.title, movie_path(movie)) %></h2> -->
    </header>
    <p>
      <%= truncate(movie.description, length: 40) %>
    </p>
    <table>
      <tr>
        <th>Released:</th>
        <td><%= movie.released_on %> (<%= time_ago_in_words(movie.released_on) %> ago)</td>
      </tr>
      <tr>
        <th>Rating:</th>
        <td><%= movie.rating %></td>
      </tr>
      <tr>
        <th>Total Gross:</th>
        <td><%= format_total_gross(movie) %></td>
      </tr>
    </table>
  </article>
<% end %>
